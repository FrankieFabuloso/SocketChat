extends layout
block scripts
  link(rel='stylesheet', type='text/css', href='/css/landing.css')
  script(src="/scripts/landing.js")
block content
  body
    .form-container
      h1.app-title Sockeet Chat
      .form-wrapper
        .form.form-body--log-in.invisible 
          form.form-log-in
            .row.form-row-email
              .twelve.columns
                label( for="Email") Email
                input.u-full-width( type='email' placeholder='human@email.org' name='email')
            .row.form-row-username
              .twelve.columns
                label( for="username") Username
                input.u-full-width( type='text' placeholder='ChatmanJones' name='name')
            .row.form-row-password
              .twelve.columns
                label( for="Password") Password
                input.u-full-width( type='password' placeholder='Password' name='password')
            .row.form-row-password
              .twelve.columns
                label( for="confirmPassword") Confirm Password
                input.u-full-width( type='password' placeholder='Confirm Password' name='password')
            .row.form-row-submit
              .button.button-danger#landing_cancel_button(value="Cancel") Cancel
              input.button-primary(type="submit" value="Submit")
        .button#log_in_button Log In
